<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>           
            /WEB-INF/applicationContext.xml
        </param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <display-name>rest-api</display-name>
    <servlet>
        <description/>
        <display-name>DeviceServlet</display-name>
        <servlet-name>DeviceServlet</servlet-name>
        <servlet-class>edu.asu.jkhines1.rest.api.DeviceServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeviceServlet</servlet-name>
        <url-pattern>/devices/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <description/>
        <display-name>UserServlet</display-name>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>edu.asu.jkhines1.rest.api.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/users/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <description/>
        <display-name>InputDataServlet</display-name>
        <servlet-name>InputDataServlet</servlet-name>
        <servlet-class>edu.asu.jkhines1.rest.api.InputDataServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InputDataServlet</servlet-name>
        <url-pattern>/data/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <description/>
        <display-name>ReportServlet</display-name>
        <servlet-name>ReportServlet</servlet-name>
        <servlet-class>edu.asu.jkhines1.rest.api.ReportServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReportServlet</servlet-name>
        <url-pattern>/reports/*</url-pattern>
    </servlet-mapping>
</web-app>
